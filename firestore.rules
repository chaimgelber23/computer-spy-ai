rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Activity Logs: Users write their own, admins can read all
    match /activity_logs/{logId} {
      allow read: if request.auth != null &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Logs are immutable
    }

    // Insights: Admin SDK writes, admins can read all
    match /insights/{insightId} {
      allow read: if request.auth != null && isAdmin();
      allow write: if false; // Only Admin SDK can write
    }

    // Legacy weekly insights
    match /weekly_insights/{insightId} {
      allow read: if request.auth != null &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false;
    }

    // Users: owner can read/update, admins can read all
    match /users/{userId} {
      allow read: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Agent heartbeats: Users write their own, admins can read all
    match /agent_heartbeats/{userId} {
      allow read: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin settings: Only admins
    match /admin_settings/{docId} {
      allow read, write: if request.auth != null && isAdmin();
    }

    // Communication logs: Only admins can read/write
    match /communication_logs/{logId} {
      allow read, write: if request.auth != null && isAdmin();
    }
  }
}
